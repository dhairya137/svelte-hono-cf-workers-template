{
	"name": "svelte-hono-cf-workers-template",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "npm run build && wrangler dev src/worker.ts",
		"preview": "npm run build && wrangler dev src/worker.ts",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"deploy": "npm run build && npx wrangler deploy",
		"db:create": "npx wrangler d1 create auth-svelte-hono",
		"db:migrations:generate": "drizzle-kit generate",
		"db:migrations:apply": "npx wrangler d1 migrations apply auth-svelte-hono --local",
		"db:migrations:apply:prod": "npx wrangler d1 migrations apply auth-svelte-hono --remote",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250421.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/postcss": "^4.1.4",
		"@tailwindcss/vite": "^4.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^22.14.1",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.21",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.3.2",
		"wrangler": "^4.12.0"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"drizzle-kit": "^0.31.0",
		"drizzle-orm": "^0.42.0",
		"hono": "^4.7.7",
		"jose": "^6.0.10",
		"tinro": "^0.6.12",
		"uuid": "^11.1.0"
	}
}
